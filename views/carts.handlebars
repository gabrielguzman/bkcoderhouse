<div class="col col-lg-12 mt-4">
  <div class="row">
    <h1 class="text-center">Cart Content</h1>
  </div>
</div>

<div class="col col-lg-12 col-md-8 col-sm-4 mt-4">
  <div class="row">
    <table class="table table-dark table-striped">
      <thead>
        <tr class="table-primary">
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Thumbnails</th>
          <th scope="col">Code</th>
          <th scope="col">Category</th>
          <th scope="col">Quantity</th>
        </tr>
      </thead>
      <tbody>
        {{#if cart}}
        {{#each cart.products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td>{{this.product.description}}</td>
          <td>{{this.product.price}}</td>
          <td>{{this.product.thumbnail}}</td>
          <td>{{this.product.code}}</td>
          <td>{{this.product.category}}</td>
          <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
          <td colspan='9'>No se encontraron productos.</td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

