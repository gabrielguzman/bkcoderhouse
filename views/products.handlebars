<div class="container mt-4">
  <div class="row">
    <h1 class="text-center">Paginate Products</h1>
  </div>
  {{nextLink}}

  <div class="row mt-4">
    {{#each products}}
      <div class="col-lg-3">
        <div class="product">
          {{_id}}
          <h2>{{title}}</h2>
          <p>{{description}}</p>
          <p>Price: ${{price}}</p>
          <p>Stock: {{stock}}</p>
          <p>Category: {{category}}</p>
          <form
            action="api/v2/carts/6477d4c7be7a7e0baf623180/product/{{_id}}"
            method="POST"
          >
            <button type="submit">Agregar al carrito</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="row mt-4">
    <div class="col-lg-12">
      <nav class="d-flex justify-content-end">
        <ul class="pagination">
          {{#if prevLink}}
            <li class="page-item">
              <a class="page-link" href="{{prevLink}}">Anterior</a>
            </li>
          {{else}}
            <li class="page-item disabled">
              <span class="page-link">Anterior</span>
            </li>
          {{/if}}
          <li class="page-item">
            <span class="page-link">PÃ¡gina {{pag}} de {{totalPages}}</span>
          </li>
          {{#if nextLink}}
            <li class="page-item">
              <a class="page-link" href="{{nextLink}}">Siguiente</a>
            </li>
          {{else}}
            <li class="page-item disabled">
              <span class="page-link">Siguiente</span>
            </li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </div>
</div>

<script src="js/main.js"></script>